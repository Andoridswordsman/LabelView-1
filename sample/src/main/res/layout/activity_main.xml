<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint"/>

    <me.drakeet.labelview.LabelView
        android:id="@+id/lableview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="text"
        android:textSize="12sp"
        android:autoLink="web"
        app:leftText="LeftText -&gt; "
        app:topText="Top: http://drakeet.me"
        app:rightText=" &lt;- RightText"
        app:bottomText="BottomText"
        app:leftTextAppearance="@style/LeftTextStyle"
        app:topTextAppearance="@style/TopTextStyle"
        app:rightTextAppearance="@style/RightTextStyle"
        app:bottomTextAppearance="@style/BottomTextStyle"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:hint="Call labelView.setText()"
        android:textSize="12sp"/>
</LinearLayout>