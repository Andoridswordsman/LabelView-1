<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LeftTextStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#4e6eec</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TopTextStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ec4e4e</item>
        <item name="android:textColorLink">#000000</item>
    </style>

    <style name="RightTextStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#a8b720</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomTextStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#909090</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
